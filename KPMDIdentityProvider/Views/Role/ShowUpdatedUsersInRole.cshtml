@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Updated";
}

<h1>List of Roles</h1>
<a asp-action="Create">Create</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Manage</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>

                    @Html.ActionLink("AddRemoveUsers'",
                             "EditUsersInRole", "Role",
                             new { id = @role.Id, name = @role.Name })
                </td>
                <td>
                    @Html.ActionLink("Delete'",
                             "Delete", "Role",
                             new { id = @role.Id, name = @role.Name })
                </td>

            </tr>

        }
    </tbody>
</table> 